<div class="container">
    <div class="row justify-content-center mt-3">
        <div class="col-12">
            <div class="card text-center">
                <div class="card-header">
                    Article
                </div>
                <div class="card-body">
                    <div class="author-wrapper d-flex flex-column align-items-center">
                        <%= gravatar_for @article.user %>
                        <%= link_to @article.user.username, user_path(@article.user), class: "card-link font-weight-bolder mt-2" %>
                        <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
                    </div>
                    <hr />
                    <h5 class="card-title"><%= @article.title %></h5>
                    <p class="card-text"><%= @article.description %></p>

                    <% if logged_in? && current_user == @article.user %>
                        <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-sm btn-primary' %> 
                        <%= link_to "Delete this article", article_path, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-danger' %> 
                    <% end %>
                </div>
                <div class="card-footer text-muted">
                    <%= time_ago_in_words(@article.updated_at) %>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <%= link_to "Back to articles listing", articles_path %>
        </div>
    </div>
</div>